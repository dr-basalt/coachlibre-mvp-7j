export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Plateforme de coaching personnalisé avec IA" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <nav class="bg-white shadow-sm">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <h1 class="text-2xl font-bold text-blue-600">CoachLibre</h1>
          </div>
          <div class="flex items-center space-x-4">
            <a href="/coaches" class="text-gray-700 hover:text-blue-600">Coaches</a>
            <a href="/login" class="bg-blue-600 text-white px-4 py-2 rounded-md">Connexion</a>
          </div>
        </div>
      </div>
    </nav>
    
    <main>
      <slot />
    </main>
    
    <footer class="bg-gray-800 text-white py-8">
      <div class="max-w-7xl mx-auto px-4 text-center">
        <p>&copy; 2024 CoachLibre. Tous droits réservés.</p>
      </div>
    </footer>
  </body>
</html>
