# =================================
# COACHLIBRE MVP - STAGING ENV
# =================================

# Cluster Configuration
ENVIRONMENT=staging
CLUSTER_NAME=coachlibre-staging
DOMAIN=staging.coachlibre.com

# Docker Registry
DOCKER_REGISTRY=docker.io
DOCKER_NAMESPACE=coachlibre

# Frontend Configuration
ASTRO_PORT=3000
ASTRO_HOST=0.0.0.0
PAYLOAD_API_URL=https://api.staging.coachlibre.com
TINA_CLIENT_ID=${TINA_CLIENT_ID}
TINA_TOKEN=${TINA_TOKEN}

# Backend Configuration
PAYLOAD_PORT=3001
PAYLOAD_SECRET=${PAYLOAD_SECRET}
DATABASE_URL=${DATABASE_URL}
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}

# AI Services
FLOWISE_PORT=3002
FLOWISE_DATABASE_PATH=/opt/flowise/.flowise
OLLAMA_API_URL=http://ollama:11434
OPENAI_API_KEY=${OPENAI_API_KEY}

# Workflow Services
N8N_PORT=5678
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=${N8N_USER}
N8N_BASIC_AUTH_PASSWORD=${N8N_PASSWORD}
N8N_WEBHOOK_URL=https://workflows.staging.coachlibre.com

# Vector Database
QDRANT_PORT=6333
QDRANT_API_KEY=${QDRANT_API_KEY}

# Video Services
LIVEKIT_PORT=7880
LIVEKIT_API_KEY=${LIVEKIT_API_KEY}
LIVEKIT_API_SECRET=${LIVEKIT_API_SECRET}

# Monitoring
GRAFANA_PORT=3003
PROMETHEUS_PORT=9090
